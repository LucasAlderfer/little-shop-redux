<html>
<head>
  <title>Little Shop</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta charset="UTF-8">
  <link rel="stylesheet" type="text/css" href="/main.css">
  <link href="https://fonts.googleapis.com/css?family=Comfortaa|Didact+Gothic|Monoton" rel="stylesheet">
</head>
<body>
  <div class="header">
    <header>
      <div class="navcontainer">
        <nav class="fixednav">
          <div class="leftnav"><a href="#">LittleSHOP</a><img src='/little_shop_logo.png' class="shop-logo"></div>
          <div class="rightnav"><a href="/merchants" class="hvr-pop">Merchants</a></div>
          <div class="rightnav"><a href="/items" class="hvr-pop">Items</a></div>
          <div class="rightnav"><a href="/invoices" class="hvr-pop">Invoices</a></div>
        </nav>
      </div>
    </header>
  </div>
  <section>
    <h2><%= @merchant.name %></h2>
    <div class="single_merchant_button">
      <a href="/merchants/<%= @merchant.id %>/edit" class="create_link" >edit</a>
      <form action="/merchants/<%= @merchant.id %>" method='POST' class="form_reset">
        <input type='hidden' name='_method' value='DELETE'>
        <input type='submit' value='delete' class="create_link"/>
      </form>
    </div>
  </section>
  <h2 class="merch-item-heading">Merchant Items</h2>
  <main>
    <% @merchant.items.each do |item| %>
    <article class="item-container">
          <img src='<%= item.image_url %>'/>
          <p class="item-text"><a href="/items/<%= item.id %>" class="hvr-pop"><%= item.name %></a></p>
          <p class="item-text"><strong>Price:</strong> <%= item.unit_price %></p>
      </article>
      <% end %>
  </main>
  <footer>
    <p>Created by Keegan, JP, and Lucas<p>
  </footer>
</body>
</html>
