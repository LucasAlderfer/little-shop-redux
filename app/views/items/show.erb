<html>
<head>
  <title>Little Shop</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta charset="UTF-8">
  <link rel="stylesheet" type="text/css" href="/main.css">
  <link href="https://fonts.googleapis.com/css?family=Comfortaa|Didact+Gothic|Monoton" rel="stylesheet">
</head>
<body>
  <div class="header">
    <header>
      <div class="navcontainer">
        <nav class="fixednav">
          <div class="leftnav"><a href="#">LittleSHOP</a></div>
          <div class="rightnav"><a href="#" class="hvr-pop">Merchants</a></div>
          <div class="rightnav"><a href="#" class="hvr-pop">Items</a></div>
          <div class="rightnav"><a href="#" class="hvr-pop">Invoices</a></div>
        </nav>
      </div>
    </header>
  </div>
  <section>
    <h2><%= @item.name %></h2>
    <div class="single_item_button">
      <a href="/items/<%= @item.id %>/edit" >edit</a>
      <form action="/items/<%= @item.id %>" method='POST'>
        <input type='hidden' name='_method' value='DELETE'>
        <input type='submit' value='delete' />
      </form>
    </div>
    <h3><%= @item.name %></h3>
    <h4><%= @item.unit_price %></h4>
    <p><%= @item.description %></p>
    <h3><%= @item.merchant_id %></h3>
    <image src='<%= @item.image_url %>'/>
  </section>
</body>
</html>
