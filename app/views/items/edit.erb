<html>
<head>
  <title>Little Shop</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta charset="UTF-8">
  <link rel="stylesheet" type="text/css" href="/main.css">
  <link href="https://fonts.googleapis.com/css?family=Comfortaa|Didact+Gothic|Monoton" rel="stylesheet">
</head>
<body>
  <div class="header">
    <header>
      <div class="navcontainer">
        <nav class="fixednav">
          <div class="leftnav"><a href="#">LittleSHOP</a></div>
          <div class="rightnav"><a href="/merchants" class="hvr-pop">Merchants</a></div>
          <div class="rightnav"><a href="/items" class="hvr-pop">Items</a></div>
          <div class="rightnav"><a href="/invoices" class="hvr-pop">Invoices</a></div>
        </nav>
      </div>
    </header>
  </div>
  <section>
    <h2>Edit <%= @item.name %></h2>
  </section>
  <main class='new_item_field'>
    <form action="/items/<%= @item.id %>" method='POST'>
    <input type='hidden' name='_method' value='PUT' />
      <label for="fname">Name</label>
      <input type='text' name='item[name]' placeholder=<%= @item.name %> value='update item'>
      <label for="fdescription">Name</label>
      <input type='text' name='item[description]' placeholder=<%= @item.description %> value='update item'>
      <label for="fprice">Name</label>
      <input type='text' name='item[unit_price]' placeholder=<%= @item.unit_price %> value='update item'>
      <label for="fdescription">Name</label>
      <input type='text' name='item[image_url]' placeholder=<%= @item.image_url %> value='update item'>
      <label for="fmerchant">Name</label>
      <input type='text' name='item[merchant_id]' placeholder=<%= @item.merchant_id %> value='update item'>
      <input type='submit' value='update item' />
      <div class="single_item_button">
        <a href="/merchants/<%= @item.id %>">cancel</a>
      </div>
    </form>
  </main>
</body>
</html>
